<UserControl x:Class="EstimaTEE.Views.UserControls.SingleRowItemColor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EstimaTEE.Views.UserControls"
             mc:Ignorable="d" 
             Height="40" Width="250">
    <Grid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left">
            <Rectangle Fill="{Binding Item1, FallbackValue=White}" 
                       Width="20"
                       Height="20" 
                       Margin="2 4"/>
            <TextBlock Text="{Binding Item2, FallbackValue=Color Name}"
                       Foreground="{StaticResource PrimaryDarkBrush500}"
                       FontSize="16"
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Margin="20 0"/>
        </StackPanel> 
    </Grid>
</UserControl>
